<h1>Listing athletes</h1>

<table>
  <tr>
    <th>User</th>
    <th>Dateofbirth</th>
    <th>Phonenumber</th>
    <th>Nationality</th>
    <th>Emergency Contact</th>
    <th>Type</th>
    <th>Previoustime</th>
    <th>Wattball ID</th>
    <th>Team</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @athletes.each do |athlete| %>
  <tr>
    <td><%= "" + athlete.user.first_name + " " + athlete.user.last_name %></td>
    <td><%= athlete.dateOfBirth %></td>
    <td><%= athlete.phoneNumber %></td>
    <td><%= athlete.nationality %></td>
    <td><%= athlete.contact.name %></td>
    <td><%= athlete.previousTime %></td>
    <td><%= athlete.organisationTag %></td>
    <td><%= athlete.team.teamName %></td>
    <td><%= link_to 'Show', athlete %></td>
    <td><%= link_to 'Edit', edit_athlete_path(athlete) %></td>
    <td><%= link_to 'Destroy', athlete, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

