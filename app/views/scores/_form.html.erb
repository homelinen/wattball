<%= form_for(@score) do |f| %>
  <% if @score.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@score.errors.count, "error") %> prohibited this score from being saved:</h2>

      <ul>
      <% @score.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :wattball_player %><br />
    <% #TODO: Shouldn't show every player ever. Maybe pick a match then update player list?
        # JS? %>
    <% player_array = WattballPlayer.all.map { |player| [ player.user.name, player.id ] } %>
    <%= f.select :wattball_player_id, player_array %>
  </div>
  <div class="field">
    <%= f.label :wattball_match %><br />
    <% match_array = WattballMatch.all.map { |match| [ wattball_match_name(match), match.id ] } %>
    <%= f.select :wattball_match_id, match_array %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.number_field :amount %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
