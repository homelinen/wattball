<p id="notice"><%= notice %></p>

<%= content_tag :h1, @sport_center.name %>

<p>
  <%= @sport_center.about %>
</p>

<p>
  <b>Email:</b>
  <%= mail_to @sport_center.email %>
</p>

<ul class="address">
  <%= content_tag :li, @sport_center.address_line1 %>
  <%= content_tag :li, @sport_center.address_line2 %>
  <%= content_tag :li, @sport_center.address_town %>
  <%= content_tag :li, @sport_center.address_city %>
  <%= content_tag :li, @sport_center.address_postcode %>
</ul>

<p>
  <b>Contact:</b>
  <%= "#{@sport_center.contact.name}" %>
</p>


<% if current_user and current_user.privileged? %>
  <%= link_to 'Edit', edit_sport_center_path(@sport_center) %> |
<% end %>
<%= link_to 'Back', sport_centers_path %>
