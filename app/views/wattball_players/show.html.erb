<p id="notice"><%= notice %></p>

<p>
  <b>User:</b>
  <%= @wattball_player.user.name %>
</p>

<p>
  <b>Team:</b>
  <%= link_to @wattball_player.team.teamName, @wattball_player.team %>
</p>

<p>
  <b>Goals:</b>
  <%= recent_goals @wattball_player %>
</p>

<% if current_user && current_user.privileged? %>
  <p>
    <b>Dob:</b>
    <%= @wattball_player.dob %>
  </p>

  <p>
    <b>Phone number:</b>
    <%= @wattball_player.phone_number %>
  </p>

  <p>
    <b>Contact:</b>
    <%= @wattball_player.contact.name %>
  </p>
<% end %>

<%= link_to 'Edit', edit_wattball_player_path(@wattball_player) %> |
<%= link_to 'Back', wattball_players_path %>
